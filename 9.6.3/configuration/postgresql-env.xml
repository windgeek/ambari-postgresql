<configuration supports_final="false">

 <property>
      <name>postgresql_user</name>
      <value>postgres</value>
      <description>启动用户</description>
  </property>

  <property>
      <name>postgresql_group</name>
      <value>postgres</value>
      <description>启动用户组</description>
  </property>

   <property>
    <name>postgresql_base_dir</name>
    <value>/opt/postgresql</value>
    <description>postgresql base directory</description>
  </property>
 <property>
    <name>postgresql_source_dir</name>
    <value>/opt/postgresql_source</value>
    <description>postgresql source directory</description>
  </property>
  <property>
    <name>postgresql_log_dir</name>
    <value>/opt/postgresql/logs</value>
    <description>postgresql log directory</description>
  </property>

<!--  <property>
    <name>postgresql_conf_dir</name>
    <value>/opt/postgresql/config</value>
    <description>postgresql configuration directory</description>
  </property>-->

  <property>
    <name>postgresql_pid_file</name>
    <value>/opt/postgresql/postgresql.pid</value>
    <description>postgresql PID file</description>
  </property>

</configuration>